modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Scraper"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web_scraper_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Integration Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chatbot Web Interface"

[[workflows.workflow]]
name = "Web Scraper"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --examples"

[[workflows.workflow]]
name = "web_scraper_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add requests beautifulsoup4 lxml && python main.py --examples"

[[workflows.workflow]]
name = "AI Integration Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python ai_integration_guide.py"

[[workflows.workflow]]
name = "Chatbot Web Interface"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_ui.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python main.py --examples"]

[[ports]]
localPort = 5000
externalPort = 80
